<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rowitem_root"
    android:background="@color/black_overlay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <android.support.v7.widget.CardView
    android:layout_marginTop="@dimen/margin_10"
    android:layout_margin="@dimen/margin_10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white_full"
    android:elevation="@dimen/margin_10"
    app:cardCornerRadius="@dimen/margin_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_full">

             <ImageView
                android:id="@+id/photo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="@dimen/margin_10"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_launcher_background"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Narayana"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_15"
                android:textSize="@dimen/text_smallsize"
                android:layout_toRightOf="@+id/photo"
                android:textAllCaps="false"
                android:textColor="@color/green"/>

            <TextView
                android:id="@+id/fullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Veeravenkata Narayana pamuri"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_05"
                android:textSize="@dimen/text_smallsize"
                android:layout_toRightOf="@+id/photo"
                android:layout_below="@+id/name"
                android:textAllCaps="false"
                android:textColor="@color/green"/>

            <TextView
                android:id="@+id/wcounttitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fullname"
                android:textColor="@color/black_light"
                android:textSize="@dimen/text_smallsize"
                android:layout_toRightOf="@+id/photo"
                android:layout_marginTop="@dimen/margin_05"
                android:layout_marginLeft="@dimen/margin_10"
                android:text="Watcher count :" />


            <TextView
                android:id="@+id/wcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_05"
                android:textSize="@dimen/text_smallsize"
                android:layout_toRightOf="@+id/wcounttitle"
                android:layout_below="@+id/fullname"
                android:textAllCaps="false"
                android:textColor="@color/black_light"/>

            <TextView
                android:id="@+id/ccounttitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wcounttitle"
                android:textColor="@color/black_light"
                android:textSize="@dimen/text_smallsize"
                android:layout_toRightOf="@+id/photo"
                android:layout_marginTop="@dimen/margin_05"
                android:layout_marginLeft="@dimen/margin_10"
                android:text="Commit count :" />

            <TextView
                android:id="@+id/ccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_05"
                android:textSize="@dimen/text_smallsize"
                android:layout_toRightOf="@+id/ccounttitle"
                android:layout_below="@+id/wcount"
                android:textAllCaps="false"
                android:textColor="@color/black_light"/>

        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>
</RelativeLayout>